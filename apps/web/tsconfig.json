{
  "extends": "@crowdsourced-meal-map/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*"],
      "@/components/*": ["./components/*"],
      "@/hooks/*": ["./hooks/*"],
      "@/lib/*": ["./lib/*"],
      "@/types/*": ["./types/*"],
      "@/messages/*": ["./messages/*"],
      "@crowdsourced-meal-map/ui": ["../../packages/ui/src/index.ts"],
      "@crowdsourced-meal-map/ui/*": ["../../packages/ui/src/*"],
      "@crowdsourced-meal-map/shared": ["../../packages/shared/src/index.ts"],
      "@crowdsourced-meal-map/shared/*": ["../../packages/shared/src/*"],
      "@crowdsourced-meal-map/database": ["../../packages/database/src/index.ts"],
      "@crowdsourced-meal-map/database/*": ["../../packages/database/src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "next.config.js",
    ".next/types/**/*.ts",
    "../../packages/database/src/**/*",
    "../../packages/shared/src/**/*"
  ]
}
