{
    "extends": "@crowdsourced-meal-map/typescript-config/react-library.json",
    "compilerOptions": {
        "outDir": "dist",
        "baseUrl": ".",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "module": "esnext",
        "target": "es6",
        "paths": {
            "@/*": ["./src/*"]
        },
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}